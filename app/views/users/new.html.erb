<% if session[:user] %>

	<div class="comment">
		You are already logged in. Logout to create a new account
		<%= form_tag("/users/logout", method: "post") do %>
	  	<%= submit_tag("Logout") %>
	  	<% end %>
	</div>

<% else %>

	<% @user.errors.full_messages.each do |msg| %>
		<div class="notice"><%= msg %></div>
	<% end %>


	<%= form_for(@user, method: :post, url: {action: :create}) do |form| %>
		<table class="form">
		<tr>
			<td><%= form.label(:first_name, "First Name:")%></td>
			<td><%= form.text_field(:first_name) %></td>
		</tr>
		<tr>
			<td><%= form.label(:last_name, "Last Name:")%></td>
			<td><%= form.text_field(:last_name) %></td>
		</tr>
		<tr>
			<td><%= form.label(:login, "Username:")%></td>
			<td><%= form.text_field(:login) %></td>
		</tr>
		<tr>
			<td><%= form.label(:password, "Password:")%></td>
			<td><%= form.text_field(:password) %></td>
		</tr>
		<tr>
			<td><%= form.label(:password_digest, "Retype Password:")%></td>
			<td><%= form.text_field(:password_digest) %></td>
		</tr>
		<tr>
			<td><%= form.submit "Register New User" %></td>
		</tr>
		</table>
	<% end %>

<% end %>